<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">


    <xacro:macro name="joint" params="frame_id parent pos_x pos_y pos_z">
        <link name="{side}_joint_link">
            <visual>
                <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
                <geometry>
                    <box size="${length} ${width} ${height}" />
                </geometry>

                <material name="yellow">
                    <color rgba="0.0 0.0 0.6627 1.0" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <box size="${length} ${width} ${height}" />
                </geometry>
            </collision>

            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <mass value="${mass}" />
                <inertia ixx="${(1/12) * mass * ((width  * width)  + (height * height))}" ixy="0.0"
                    ixz="0.0"
                    iyy="${(1/12) * mass * ((length * length) + (height * height))}" iyz="0.0"
                    izz="${(1/12) * mass * ((length * length) + (width  * width))}" />
            </inertial>
        </link>

        <gazebo reference="base_link">
            <visual>
                <material>
                    <ambient>0.8392 0.6314 0.0 1.0</ambient>
                    <diffuse>0.8392 0.6314 0.0 1.0</diffuse>
                    <specular>0.99 0.99 0.99 1.0</specular>
                    <emissive>0.0 0.0 0.0 0.0</emissive>
                </material>base_to_footprint </visual>
        </gazebo>

        <joint name="${frame_id}_joint" type="revolute">
            <parent link="${parent}" />
            <child link="${frame_id}_joint_link" />
            <origin xyz="0 0 0" rpy="0 0 0" />
        </joint>
    </xacro:macro>

</robot>